{
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["flowtype", "import", "promise", "react", "security"],
  "extends": [
    "plugin:promise/recommended",
    "plugin:flowtype/recommended",
    "plugin:security/recommended",
    "plugin:import/recommended",
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "comma-dangle": 0,
    "import/dynamic-import-chunkname": "error",
    "import/no-commonjs": "error",
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-magic-numbers": 0,
    "no-unused-vars": "warn",
    "quotes": [
      "error",
      "single",
      {"avoidEscape": true, "allowTemplateLiterals": true}
    ],
    "react/jsx-filename-extension": ["error", {"extensions": [".jsx"]}],
    "react/sort-comp": [
      "error",
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ]
  }
}
